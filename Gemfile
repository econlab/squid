  gem 'sdoc', '~> 0.4.0'
end


# Development
group :development, :test do
  gem 'annotate'
  gem 'byebug'
  gem 'web-console', '~> 2.0'
  gem 'quiet_assets'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'pry-rails'
end


# Production
group :production do
  gem 'rails_12factor'
end


# Ruby
ruby '2.2.0'
